<html>
    <head>
        <title>Danh sách token</title>
        <link rel="stylesheet" type="text/css" href="/libs/bootstrap-3.3.7/dist/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/css/addFriends.css">
        <link rel="stylesheet" type="text/css" href="/css/listToken.css">
    </head>
    <body>
        <% include ../components/menu %>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="center">#</th>
                    <th>Token</th>
                    <th>Ngày tạo</th>
                    <th>Ngày sử dụng cuối</th>
                    <th>Trạng thái</th>
                    <th class="center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < list.length; i++) { %>
                   <tr>
                        <td class="center"><b><%= i + 1 %></b></td>
                        <td class="td-token"><%= list[i].token %></td>
                        <td><%= list[i].create_at %></td>
                        <td><%= list[i].lastUse %></td>
                        <td>
                            <%if (list[i].active) {%>
                                <span class="badge">Hoạt động</span>
                            <%} else {%>
                                <span class="badge">Không hoạt động</span>
                            <%}%>
                        </td>
                        <td class="center">
                            <div class="btn-group">
                                <a href="/token/<%= list[i]._id %>" class="btn btn-primary btn-sm">Chi tiết</a>
                                <button type="button" class="btn btn-danger btn-sm btn-delete-token" data-value="<%= list[i]._id %>">Xóa</button>
                            </div>
                        </td>
                   </tr>
                <% } %>
            </tbody>
        </table>
    </body>
    <script type="text/javascript" src="/libs/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/libs/bootstrap-3.3.7/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="/js/token.js"></script>
</html>