<html>
    <head>
        <title>Send Request Add Friends</title>
        <link rel="stylesheet" type="text/css" href="/libs/bootstrap-3.3.7/dist/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/css/addFriends.css">
    </head>
    <body>
        <% include ./components/menu %>
        <div class="col-md-12">
            <form class="col-md-6">
                <legend>Gửi yêu cầu thêm bạn!</legend>
                <div class="form-group">
                    <textarea class="form-control" name="token" placeholder="Nhập token" rows="10" readonly><%= listToken.length ? listToken[0].token : '' %></textarea>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="userId" placeholder="Nhập userId"/>
                </div>
                <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
            </form>
            <form class="col-md-6">
                <legend>Danh sách token</legend>
                <% if (listToken.length) {%>
                    <ul class="list-group list-token">
                        <% for (var i = 0; i < listToken.length; i++) { %>
                            <li class="list-group-item <%= i == 0 ? 'active' : '' %>">
                                <%= listToken[i].token %>
                            </li>
                        <% } %>
                    </ul>
                <% } else { %>
                    <div class="alert alert-info">
                        <strong>Thông báo!</strong> không còn token để thực hiện gửi yêu cầu
                    </div>
                <% } %>
            </form>
        </div>
        <div class="overlay-loader">
            <div class="loader">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </body>
    <script type="text/javascript" src="/libs/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/libs/bootstrap-3.3.7/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="/js/addFriends.js"></script>
</html>